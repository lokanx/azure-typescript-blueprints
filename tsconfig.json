{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "listFiles": false,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
